@startuml
title Fitness Open API - Role & Endpoint Access

actor "API Consumer\n(Fitness App / Client)" as Consumer
actor Developer
actor Admin

rectangle "Fitness Open API Platform" {

  ' =====================
  ' API Consumer Access
  ' =====================
  Consumer --> (GET /api/exercises)

  ' =====================
  ' Developer Access
  ' =====================
  Developer --> (GET /api/exercises)
  Developer --> (GET /api/docs)
  Developer --> (API Playground)
  Developer --> (Generate API Key)

  ' =====================
  ' Admin Access
  ' =====================
  Admin --> (GET /api/admin/developers)
  Admin --> (POST /api/users)
  Admin --> (DELETE /api/admin/developers/{id})

  Admin --> (POST /api/admin/apikey/{userId}/regenerate)
  Admin --> (DELETE /api/admin/apikey/{userId})

  Admin --> (Admin CRUD Management)
}

@enduml
